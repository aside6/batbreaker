<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/flexigrid/flexigrid.css")" rel="stylesheet" type="text/css" />
    <link type='text/css' rel='stylesheet' href="/Content/basic.css" />
    <script language="javascript" src="/Scripts/jquery-1.10.2.min.js"></script>
    <script language="javascript" src="/Scripts/jquery.tablesorter.min.js"></script>
    <script language="javascript" src="/Scripts/jquery.simplemodal.1.4.4.min.js"></script>
    <script language="javascript" src="/Scripts/BatBreaker.js"></script>
    <script src="/Scripts/MicrosoftAjax.js" type="text/javascript"></script>
    <script src="/Scripts/MicrosoftMvcAjax.js" type="text/javascript"></script>
    <script src="/Scripts/MicrosoftMvcValidation.js" type="text/javascript"></script>
</head>

<body>
    <div class="none"><a href="#maincontent">skip to the main content area of this page</a></div>
    <div class="logo logo-inner"><a href="@Url.Action("Index", "Home")">BatBreaker</a></div>
    <div class="header-container">
      <div class="nav-main">
        <ul>
            <li class="first">@Html.ActionLink("home", "Index", "Home")</li>

            <li>@Html.ActionLink("about", "About", "Home")</li>
            
            <li>@Html.Action("MyPlayerInfo", "MyPlayer")</li>

        </ul>
      </div>
      <div class="nav-login">
        @Html.Partial("_LogOnPartial")
      </div>
    </div>
    <div class="header-bottom"></div>
<div class="content-container">
  <div class="content-main"><a name="maincontent" id="maincontent"></a>

            @RenderBody()
  
  </div>
  <div class="content-side">
  <a href="#"><img src="../../Content/images/rss.png" alt="RSS Feed" /></a>
    <ul class="list-links">
      <li>@Html.ActionLink("Play/Continue Game", "SimulateGame", "Game")</li>
    </ul>
    <ul class="list-links">
      <li><a href="/MyPlayer/MyPlayerAttributes">Spend Skill Points</a></li>
      <li>@Html.ActionLink("Standings", "Standings", "Stats")</li>
    </ul>
  </div>
  <div class="clear"></div>
</div>
<div class="footer-container">
  <div class="nav-footer">
    <ul>
      <li class="first">@Html.ActionLink("home", "Index", "Home")</li>
      <li>@Html.ActionLink("about", "About", "Home")</li>
    </ul>
  </div>
  <div class="copyright"> &copy; 2007 Site Name </div>
</div>
</body>
</html>



