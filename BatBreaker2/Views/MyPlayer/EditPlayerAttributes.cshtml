                @Html.Partial("AttPoints", new BatBreaker2.Models.StatModels.PlayerAttribute { Amount = Model.PitchingClutch, Type = "PitchingClutch" })
            }
            
            @Html.Partial("AttPoints", new BatBreaker2.Models.StatModels.PlayerAttribute { Amount = Model.Stamina, Type = "Stamina" })
            @Html.Partial("AttPoints", new BatBreaker2.Models.StatModels.PlayerAttribute { Amount = Model.Durability, Type = "Durability" })
            @Html.Partial("AttPoints", new BatBreaker2.Models.StatModels.PlayerAttribute { Amount = Model.ContactVsLeft, Type = "ContactVsLeft" })
            @Html.Partial("AttPoints", new BatBreaker2.Models.StatModels.PlayerAttribute { Amount = Model.ContactVsRight, Type = "ContactVsRight" })
