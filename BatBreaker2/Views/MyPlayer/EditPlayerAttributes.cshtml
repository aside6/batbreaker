@inherits System.Web.Mvc.WebViewPage<BatBreaker2.Models.PlayerAttribute>

<h1 class="first">My Player Attributes</h1>
    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true)
            <div>
            @if (ViewData["Message"] != null) {
                <label style="color: Red">@ViewData["Message"]</label><br /><br />
            }
            Available Skill Points: <input type="text" readonly="text" id="txtPoints" name="txtPoints" value="@Model.Player.Points" /><br /><br />
            @if (Model.Player.positionId == 1){
                @Html.Partial("AttPoints", new BatBreaker2.Models.StatModels.PlayerAttribute { Amount = Model.H9, Type = "H9" })
                @Html.Partial("AttPoints", new BatBreaker2.Models.StatModels.PlayerAttribute { Amount = Model.HR9, Type = "HR9" })
                @Html.Partial("AttPoints", new BatBreaker2.Models.StatModels.PlayerAttribute { Amount = Model.K9, Type = "K9" })
