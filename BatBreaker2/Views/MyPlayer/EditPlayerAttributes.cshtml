            @Html.Partial("AttPoints", new BatBreaker2.Models.StatModels.PlayerAttribute { Amount = Model.ArmAccuracy, Type = "ArmAccuracy" })
            @Html.Partial("AttPoints", new BatBreaker2.Models.StatModels.PlayerAttribute { Amount = Model.Blocking, Type = "Blocking" })
            @Html.Partial("AttPoints", new BatBreaker2.Models.StatModels.PlayerAttribute { Amount = Model.GameCalling, Type = "GameCalling" })
            </div>
            
            <p>
                <input type="submit" value="Save" />
            </p>

    }


